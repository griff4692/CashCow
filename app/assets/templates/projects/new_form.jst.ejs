<br>
<label>Category:
	<select id='category' class="category" name="category">
		<option value="Art"
		<% if (model.escape('category') === "Art") { %>
			<%= "selected" %>
		<% } %>
		>
			Art
		</option>
		<option value="Music"
			<% if (model.escape('category') === "Music") { %>
				<%= "selected" %>
			<% } %>
		>
			Music
		</option>
		<option value="Philanthropy"
			<% if (model.escape('category') === "Philanthropy") { %>
				<%= "selected" %>
			<% } %>
			>
			Philanthropy
		</option>
	</select>
</label>
<br>
<label>Title:
	<input id='title' type="text" name="title", val="<%= model.escape('title') %>">
</label>
<br>
<label>Image URL:
	<input id='image' type="file" name="image" value="<%= model.escape('image_url') %>">
</label>
<br>
<label>Description:
	<textarea id='description' name="description" rows="8" cols="40">
		<%= model.escape('description') %>
	</textarea>
</label>
<br>
<label> Deadline:
	<input id='deadline' type="date" class='date' name="deadline">
</label>
<br>
<label> Funding Goal:
	<input id='goal' type="integer" name="goal">
</label>
<br>
<button class="start-proj">Create New Project!</button>
